@section AccountsButtons {
    <div class="book_btn d-none d-lg-block">
        <a class="button font-weight-bold a-btn" asp-controller="Account" asp-action="SignUp">Sign Up</a>
    </div>
}

<div class="docmed-login">
    <div class="docmed-logo">DocMed</div>
    
    <!-- Error Display Section -->
    <div id="error-display" class="mb-3">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Error
            </div>
        }
    </div>
    <div div id="show-error" class="mb-3"></div>

    <form id="loginForm" method="post" asp-controller="Account" asp-action="Login">
        @Html.AntiForgeryToken()
        
        <div id="account-info" class="form-section section-visible">
            <h3 class="mb-4 form-header">Account Login</h3>

            <div class="form-input mb-3">
                <label for="EmailOrUserName" class="form-label">Email or UserName</label>
                <input type="text" class="form-control" id="EmailOrUserName" name="EmailOrUserName" required>
            </div>

            <div class="form-input mb-3 position-relative">
                <label for="Password" class="form-label">Password</label>
                <input type="password" class="form-control" id="Password" name="Password" required>
                <span class="password-toggle" onclick="togglePassword('Password')">
                    <i class="bi bi-eye"></i>
                </span>
            </div>

            <div class="form-check-field mb-3">
                <input class="form-check-input" type="checkbox" id="RememberMe" asp-for="RememberMe" />
                <label class="form-check-label" asp-for="RememberMe">
                    Remember me
                </label>
            </div>

            <div class="reset-password-link">
                <a class="button" asp-controller="Account" asp-action="ResetPassword">Forget Password?</a>
            </div>

            <div class="form-input d-grid">
                <button type="submit" class="btn btn-primary btn-docmed-primary">Login</button>
            </div>
        </div>
    </form>

    <div class="signup-link">
        <p class="form-link">Do not have an account?</p>
        <a class="button form-link" asp-controller="Account" asp-action="SignUp">Sign Up</a>
    </div>
</div>