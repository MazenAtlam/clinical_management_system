    <script>
        // Toggle password visibility
        function togglePassword(inputId) {
            const passwordInput = document.getElementById(inputId);
            const toggleIcon = passwordInput.nextElementSibling.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye');
                toggleIcon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye-slash');
                toggleIcon.classList.add('bi-eye');
            }
        }

        // Section navigation
        document.getElementById('nextBtn').addEventListener('click', function() {
            hideError();

            const messages = [];
            var isValid = true;

            // Basic validation
            const username = document.getElementById('UserName').value;
            const email = document.getElementById('Email').value;
            const password = document.getElementById('Password').value;
            const confirmPassword = document.getElementById('ConfirmPassword').value;

            if (!username || !email || !password || !confirmPassword) {
                messages[0] = 'Please fill in all fields';
                showErrors(messages);
                return;
            }

            if (username.indexOf(' ') >= 0) {
                messages[0] = 'Username cannot include spaces';
                isValid = false;
            }

            const validateEmail = (email) => {
                return email.match(
                    /^(([^<>()[\]\\.,;:\s@@\"]+(\.[^<>()[\]\\.,;:\s@@\"]+)*)|(\".+\"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
                );
            };

            if (!validateEmail(email)) {
                messages[1] = 'Email is invalid';
                isValid = false;
            }

            if (password !== confirmPassword) {
                messages[2] = 'Passwords do not match';
                isValid = false;
            }

            if (!isValid) {
                showErrors(messages);
                return;
            }

            // Hide account info, show user info
            document.getElementById('account-info').classList.remove('section-visible');
            document.getElementById('account-info').classList.add('section-hidden');

            document.getElementById('user-info').classList.remove('section-hidden');
            document.getElementById('user-info').classList.add('section-visible');
            
            hideError();
        });

        document.getElementById('backBtn').addEventListener('click', function() {
            // Hide user info, show account info
            document.getElementById('user-info').classList.remove('section-visible');
            document.getElementById('user-info').classList.add('section-hidden');

            document.getElementById('account-info').classList.remove('section-hidden');
            document.getElementById('account-info').classList.add('section-visible');

            hideError();
        });

        function showErrors(messages) {
            const errorDiv = document.getElementById('show-error');
            
            var errorBlock = document.createElement('div');
            errorBlock.classList.add('alert');
            errorBlock.classList.add('alert-danger');
            errorBlock.setAttribute('role', 'alert');
            
            messages.forEach((message) => {
                var errorMessage = document.createElement('p');
                errorMessage.innerHTML = message;
                errorMessage.style.margin = "0";
                errorBlock.appendChild(errorMessage);
            });
            
            errorDiv.appendChild(errorBlock);
        }

        function hideError() {
            const errorDiv = document.getElementById('show-error');
            errorDiv.innerHTML = ``;
        }

        // Form submission validation
        document.getElementById('signupForm').addEventListener('submit', function(e) {
            const firstName = document.getElementById('FirstName').value;
            const lastName = document.getElementById('LastName').value;
            const ssn = document.getElementById('SSN').value;
            const salary = document.getElementById('Salary').value;

            if (!firstName || !lastName || !ssn || !salary) {
                e.preventDefault();
                showError('Please fill in all personal information fields');

                // Make sure user info section is visible
                document.getElementById('account-info').classList.remove('section-visible');
                document.getElementById('account-info').classList.add('section-hidden');
                document.getElementById('user-info').classList.remove('section-hidden');
                document.getElementById('user-info').classList.add('section-visible');
            }
        });
    </script>
